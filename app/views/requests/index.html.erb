<div class="row">
  <div class="col-md-12">
    <h1>Current Requests</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <h3>Department</h3>
  </div>
  <div class="col-md-3">
    <h3>Title</h3>
  </div>
  <div class="col-md-3">
    <h3>Description</h3>
  </div>
  <div class="col-md-3">
    <h3>Date</h3>
  </div>
</div>
<% @requests.each do |request| %>
    <div class="row">
      <div class="col-md-3">
        <h4><%= request.department %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= request.title %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= request.description %></h4>
      </div>
      <div class="col-md-3">
        <h4><%= request.date %></h4>
      </div>
    </div>
<% end %>

